{
  "name": "the-lab-notebook",
  "version": "1.1.2",
  "description": "Engineering documentation and project notes",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "postbuild": "pagefind --site .next/server/app --output-path public/_pagefind",
    "dev": "next --turbopack",
    "prebuild": "npm run verify-projects && npm run verify-meta",
    "build": "next build",
    "start": "next start",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "verify-links": "node scripts/verify-links.js",
    "verify-projects": "node scripts/verify-projects.js",
    "verify-meta": "node scripts/verify-meta.js",
    "check": "npm run lint && npm run verify-links && npm run verify-projects && npm run verify-meta",
    "analyze": "ANALYZE=true npm run build",
    "prepare": "husky"
  },
  "keywords": [],
  "author": "Nininunz",
  "license": "ISC",
  "packageManager": "pnpm@10.15.1",
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "@tailwindcss/postcss": "^4.1.18",
    "lucide-react": "^0.562.0",
    "minimatch": "^10.1.1",
    "next": "^16.1.1",
    "next-themes": "^0.4.6",
    "nextra": "^4.6.1",
    "nextra-theme-docs": "^4.6.1",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "yet-another-react-lightbox": "^3.27.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.3",
    "@next/bundle-analyzer": "^16.1.1",
    "@next/eslint-plugin-next": "^16.1.1",
    "@types/node": "25.0.3",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@typescript-eslint/eslint-plugin": "^8.50.1",
    "@typescript-eslint/parser": "^8.50.1",
    "autoprefixer": "^10.4.23",
    "eslint": "^9.39.2",
    "eslint-config-next": "^16.1.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "glob": "^13.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "pagefind": "^1.4.0",
    "postcss": "^8.5.6",
    "prettier": "^3.7.4",
    "tailwindcss": "^4.1.18",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.3"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{mdx,md}": [
      "npm run verify-links"
    ],
    "lib/project-directory.{ts,d.ts}": [
      "npm run verify-projects"
    ],
    "**/_meta.js": [
      "npm run verify-meta"
    ]
  }
}
